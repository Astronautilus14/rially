// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id        Int     @id @default(autoincrement())
  username  String  @unique
  discordId String? @unique
  name      String  @default("Unknwown")
  password  String?
  team      team?   @relation(fields: [teamId], references: [id])
  teamId    Int?
}

model team {
  id                  Int                   @id @default(autoincrement())
  name                String                @unique
  members             user[]
  isCommitte          Boolean               @default(false)
  channelId           Int?
  roleId              Int?
  puzzlesubmission    puzzlesubmission[]
  challangesubmission challangesubmission[]
  crazy88submission   crazy88submission[]
}

model puzzlesubmission {
  id       Int    @id @default(autoincrement())
  team     team   @relation(fields: [teamId], references: [id])
  teamId   Int
  fileLink String @unique
  grading  Int?
  location Int
}

model challangesubmission {
  id       Int    @id @default(autoincrement())
  team     team   @relation(fields: [teamId], references: [id])
  teamId   Int
  fileLink String @unique
  grading  Int?
  location Int
  number   Int
}

model crazy88submission {
  id       Int    @id @default(autoincrement())
  team     team   @relation(fields: [teamId], references: [id])
  teamId   Int
  fileLink String @unique
  grading  Int?
  number   Int
}
